    "@feathersjs/express": "^4.5.11",
    "@feathersjs/feathers": "^4.5.11",
    "@feathersjs/socketio": "^4.5.11",
    "babel-loader": "^8.2.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express-react-views": "^0.10.5",
    "feathers-mongoose": "^8.3.1",
    "helmet": "^4.6.0",
    "lodash": "^4.17.21",
    "mail-time": "^1.2.6",
    "mongoose": "^5.12.12",
    "mustache": "^4.2.0",
    "nodemailer": "^6.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "serve-favicon": "^2.4.5",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "babel-register": "^6.26.0",
    "babel-watch": "^7.4.1",
    "eslint": "^4.13.1",
    "eslint-plugin-react": "^7.20.0",
    "mocha": "^8.4.0",
    "node-fetch": "^2.6.1"
  }
